<%= simple_form_for @dossier do |f|%>
  <%= f.error_messages %>
  <div class="section">

  <div class="two column">
    <fieldset>
    <legend>dossier</legend>
      <%= f.input :etat %>
      <%= f.input :reference, :hint => 'No special characters.' %>
      <%= f.input :archivage %>

      <%= f.input :secteur, :collection => Liste.secteur.all(:order => 'nom'), :label_method => 'nom', :as => :radio %><br/>

      <fieldset>
      <legend>coordonn√©es</legend>
      <%= f.input :coordx, :label => 'x ', :input_html => { :size => '8'}%>
      <%= f.input :coordy, :label => 'y ', :input_html => { :size => '8'}%>
      </fieldset>
    </fieldset>
  </div>
  <div class="two column">
  <fieldset>
    <legend>commentaire</legend>
    <%= f.input :tag_list %>
    <%= f.input :commentaire, :input_html => { :rows => 3, :cols => 60 }%>
  </fieldset>
  <%= f.button :submit%>
  </div>
</div></div>
<%end%>
